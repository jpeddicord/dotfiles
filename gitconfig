[color]
	ui = true
[alias]
	br = branch
	ci = commit
	co = checkout
	df = diff
	dff = diff --cached
	dfff = diff HEAD
	lg = log --graph --decorate --abbrev-commit --date=relative --all --pretty=format:'%C(blue)%h%C(reset) - %C(cyan)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold blue)- %an%C(reset)%C(yellow)%d%C(reset)'
	prune = fetch --prune
	st = status
	unstage = reset HEAD --
[push]
	default = simple
[pull]
	ff = only
[log]
	decorate = full
[merge]
	tool = vimdiff3
	conflictstyle = diff3
[commit]
	verbose = 1
