#!/bin/bash

#set -- $(xrandr -q | grep $(bspc query -M -m focused) | sed 's/.* \([0-9]\+\)x\([0-9]\+\).*/\1 \2/')
#SWIDTH=$1
#SHEIGHT=$2

WIDTH=1200 #$(($SWIDTH*3/4))
HEIGHT=80

XPOS=100 #$(($(($SWIDTH-$WIDTH))/2))
YPOS=100 #$(($SHEIGHT/2-$HEIGHT/2))

FONT="Source Code Pro:size=24"

exec dmenu_run -w $WIDTH -h $HEIGHT -x $XPOS -y $YPOS -fn "$FONT" -sb "#004444" -dim 0.6
