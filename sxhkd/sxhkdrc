## bspwm
super + alt + shift + Escape
	pkill -x panel; bspc quit
# lock
super + z
	i3lock -c 08403f -i $HOME/.lockscreen.png


## window modes
super + {a,s,d,f}
	bspc window -t {tiled,floating,pseudo_tiled,fullscreen}

## window actions
super + x
	bspc window -g locked
super + shift + q
	bspc window -c

## window focus
# last window/desktop
super + {grave,Tab}
	bspc {window,desktop} -f last
# focus history
super + {o,i}
	bspc control --record-history off; \
	bspc window {older,newer} -f; \
	bspc control --record-history on
# cycle all windows
super + {_,shift + }c
	bspc window -f {next,prev}

## window movements
# directional
super + {_,shift + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}
# swap
super + apostrophe
	bspc window -s last
# swap with biggest
super + semicolon
	bspc window -s biggest

## all window movements
# rotate desktop
super + r
	bspc desktop -R 90
# cycle windows around
super + {comma,period}
	bspc desktop -C {backward,forward}
# flip vertically/horizontally
super + {v,b}
	bspc desktop -F {vertical,horizontal}
# balance/reset sizes
super + {w,e}
	bspc desktop -{B,E}

## preselects
# select & cancel selection
super + ctrl + {h,j,k,l}
	dir={left,down,up,right}; \
	cur=$(bspc query -T -w focused.!automatic | jshon -e splitDir -u 2>&-); \
	[ "$dir" = "$cur" ] && dir=cancel; \
	bspc window -p "$dir"
# move window into preselect
super + ctrl + space
	bspc window -w last.!automatic

## resize
super + alt + {h,j,k,l}
	bspc window -e {left -10,down +10,up -10,right +10}
super + alt + shift + {h,j,k,l}
	bspc window -e {right -10,up +10,down -10,left +10}

## focus desktops
super + bracket{left,right}
	bspc desktop -f {prev,next}
super + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} '^{1-9,10}'

## desktop modes
super + n
	bspc desktop -l next

## mouse
super + button{1-3}
	; bspc pointer -g {move,resize_corner,resize_side}
super + @button{1-3}
	bspc pointer -u

## applications
super + Return
	urxvt
super + space
	~/.config/bspwm/dmenu_custom


# media
XF86Audio{Raise,Lower}Volume
	amixer -D pulse sset Master 2%{+,-}
XF86AudioMute
	amixer -D pulse set Master 1+ toggle
