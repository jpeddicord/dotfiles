## bspwm
super + alt + shift + Escape
	pkill -x panel; bspc quit
# lock
super + z
	i3lock -c 08403f -i $HOME/.lockscreen.png


## window modes
super + {a,s,d,f}
	bspc node -t ~{tiled,floating,pseudo_tiled,fullscreen}

## window actions
super + x
	bspc node -g locked
super + shift + q
	bspc node -c

## window focus
# last window/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last
# focus history
super + {o,i}
	bspc control --record-history off; \
	bspc node {older,newer} -f; \
	bspc control --record-history on
# cycle all windows
super + {_,shift + }c
	bspc node -f {next,prev}

## window movements
# directional
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}
# swap
super + apostrophe
	bspc node -s last
# swap with biggest
super + semicolon
	bspc node -s biggest

## all window movements
# rotate desktop
super + r
	bspc node @focused:/ -R 90
# cycle windows around
super + {comma,period}
	bspc node @focused:/ -C {backward,forward}
# flip vertically/horizontally
super + {v,b}
	bspc node @focused:/ -F {vertical,horizontal}
# balance/reset sizes
super + {w,e}
	bspc node @focused:/ -{B,E}

## preselects
# select
super + ctrl + {h,j,k,l}
	bspc node -p '~{west,south,north,east}'
# move window into preselect
super + ctrl + space
	bspc node -n last.!automatic

## resize
super + alt + {h,j,k,l}
	bspc node @{west,south,north,east} -r {-10,+10,-10,+10}
super + alt + shift + {h,j,k,l}
	bspc node @{east,north,south,west} -r {-10,+10,-10,+10}

## focus desktops
super + bracket{west,east}
	bspc desktop -f {prev,next}
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

## desktop modes
super + n
	bspc desktop -l next

## mouse
super + button{1-3}
	; bspc pointer -g {move,resize_corner,resize_side}
super + @button{1-3}
	bspc pointer -u

## applications
super + Return
	urxvt
super + space
	~/.config/bspwm/dmenu_custom


# media
XF86Audio{Raise,Lower}Volume
	amixer -D pulse sset Master 2%{+,-}; \
	pkill -SIGUSR1 panel_wait
XF86AudioMute
	amixer -D pulse set Master 1+ toggle; \
	pkill -SIGUSR1 panel_wait

# keyboard layouts
super + F12
	setxkbmap us -variant colemak
super + F11
	setxkbmap us


