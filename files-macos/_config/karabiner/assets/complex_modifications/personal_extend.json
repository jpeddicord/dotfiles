{
  "title": "jpeddicord's personal keyboard settings",
  "maintainers": ["jpeddicord"],
  "rules": [
    {
      "description": "personal: capslock extend mode",
      "manipulators": [
        {
          "from": {
            "key_code": "caps_lock",
            "modifiers": { "optional": ["any"] }
          },
          "to": [
            {
              "set_variable": {
                "name": "caps_pressed",
                "value": 1
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "caps_pressed",
                "value": 0
              }
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "name": "caps_pressed",
              "type": "variable_if",
              "value": 1
            }
          ],
          "from": {
            "key_code": "j",
            "modifiers": { "optional": ["any"] }
          },
          "to": [{ "key_code": "left_arrow" }],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "name": "caps_pressed",
              "type": "variable_if",
              "value": 1
            }
          ],
          "from": {
            "key_code": "k",
            "modifiers": { "optional": ["any"] }
          },
          "to": [{ "key_code": "down_arrow" }],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "name": "caps_pressed",
              "type": "variable_if",
              "value": 1
            }
          ],
          "from": {
            "key_code": "i",
            "modifiers": { "optional": ["any"] }
          },
          "to": [{ "key_code": "up_arrow" }],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "name": "caps_pressed",
              "type": "variable_if",
              "value": 1
            }
          ],
          "from": {
            "key_code": "l",
            "modifiers": { "optional": ["any"] }
          },
          "to": [{ "key_code": "right_arrow" }],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "name": "caps_pressed",
              "type": "variable_if",
              "value": 1
            }
          ],
          "from": {
            "key_code": "u",
            "modifiers": { "optional": ["any"] }
          },
          "to": [{ "key_code": "home" }],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "name": "caps_pressed",
              "type": "variable_if",
              "value": 1
            }
          ],
          "from": {
            "key_code": "o",
            "modifiers": { "optional": ["any"] }
          },
          "to": [{ "key_code": "end" }],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "name": "caps_pressed",
              "type": "variable_if",
              "value": 1
            }
          ],
          "from": {
            "key_code": "y",
            "modifiers": { "optional": ["any"] }
          },
          "to": [{ "key_code": "page_up" }],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "name": "caps_pressed",
              "type": "variable_if",
              "value": 1
            }
          ],
          "from": {
            "key_code": "h",
            "modifiers": { "optional": ["any"] }
          },
          "to": [{ "key_code": "page_down" }],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "name": "caps_pressed",
