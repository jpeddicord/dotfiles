            "key_code": "p",
            "modifiers": { "optional": ["any"] }
          },
          "to": [{ "key_code": "delete_forward" }],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "name": "caps_pressed",
              "type": "variable_if",
              "value": 1
            }
          ],
          "from": {
            "key_code": "q",
            "modifiers": { "optional": ["any"] }
          },
          "to": [{ "key_code": "escape" }],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "name": "caps_pressed",
              "type": "variable_if",
              "value": 1
            }
          ],
          "from": {
            "key_code": "a",
            "modifiers": { "optional": ["any"] }
          },
          "to": [{ "key_code": "delete_or_backspace" }],
          "type": "basic"
        }
      ]
    }
  ]
